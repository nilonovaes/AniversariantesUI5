<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
    <Panel
        headerText="Painel"
        expandable="true"
        expanded="true">
        <content>
            <Table
                id="table"
                items="{ path: 'produto>/Produtos',
                         sorter: {
                            path: 'ProductName'
                         } }">
                <headerToolbar>
                    <Toolbar>
                        <SearchField
                            width="100%"
                            search="onSearch">
                        </SearchField>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <header>
                            <Text text="{i18n>prodName}"/>
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="{i18n>qtd}"/>
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="{i18n>pre}"/>
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="{i18n>status}"/>
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" press="onPress">
                        <cells>
                            <ObjectIdentifier title="{produto>ProductName}"/>
                            <ObjectNumber number="{produto>Quantity}"/>
                            <ObjectNumber number="{produto>ExtendedPrice}" unit="R$" />
                            <ObjectStatus 
                                icon="{= ${produto>Status} === 'A' ? 'sap-icon://message-success' : 
                                         ${produto>Status} === 'B' ? 'sap-icon://message-warning' : 'sap-icon://message-error' }"
                                state="{= ${produto>Status} === 'A' ? 'Success' :  ${produto>Status} === 'B' ? 'Warning' :'Error' }" 
                                />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Panel>
</core:FragmentDefinition>