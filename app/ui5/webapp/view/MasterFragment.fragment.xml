<core:FragmentDefinition 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core">
    <Panel headerText="Painel" expandable="true" expanded="true">
        <content>
            <!-- <Switch state="true" customTextOn="PT" customTextOff="EN" type="Default" change="onTranslate"></Switch> -->
            <Table id="table" items="{ path: 'produto>/Produtos',
                            sorter:{
                            path: 'ProductName'}}">
                <headerToolbar>
                    <Toolbar>
                        <SearchField width="100%" search="onSearch"></SearchField>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <header>
                            <Text text="{i18n>Status}" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="{i18n>NomeProduto}" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="{i18n>Quantidade}" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="{i18n>Preco}" />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" press="onPress">
                        <cells>
                            <ObjectStatus
                             icon = "{= ${produto>Status} === 'A' ? 'sap-icon://message-success' :
                                        ${produto>Status} === 'B' ? 'sap-icon://message-warning' :                                          'sap-icon://message-error' }"

                                          state = "{= ${produto>Status} === 'A' ? 'Success' :
                                                       ${produto>Status} === 'B' ? 'Warning' : 'Error' }" />
                            <ObjectIdentifier title="{produto>ProductName}" />
                            <ObjectNumber number="{produto>Quantity}" />
                            <ObjectNumber number="{produto>ExtendedPrice}" unit="$" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Panel>
</core:FragmentDefinition>